{
  "name": "svelte-app",
  "version": "1.0.0",
  "main": "./src/electron.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "set NODE_ENV=development && npm run electron",
    "dev-web": "rollup -c -w",
    "start": "sirv public",
    "pure-electron": "electron .",
    "electron": "concurrently \"npm run dev-web\" \"npm run pure-electron\"",
    "validate": "svelte-check",
    "test": "mocha -r ts-node/register --watch-extensions ts --watch-files ./src/**/*.ts ./tests/**/*.test.ts -w",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.1.2",
    "@tsconfig/svelte": "^1.0.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "chai": "^4.2.0",
    "chokidar": "^3.4.2",
    "concurrently": "^5.3.0",
    "electron": "^10.1.1",
    "mocha": "^8.1.3",
    "monaco-editor": "^0.20.0",
    "nyc": "^15.1.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^2.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "svelte-spa-router": "^2.2.0",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {}
}
